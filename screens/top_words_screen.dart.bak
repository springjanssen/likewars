import 'package:flutter/material.dart';
import 'package:provider/provider.dart';
import '../state/game_state.dart';

class TopWordsScreen extends StatelessWidget {
  const TopWordsScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Top Words'),
      ),
      body: Consumer<GameState>(
        builder: (context, gameState, child) {
          final topWords = gameState.getTopWords(10);
          return ListView.builder(
            itemCount: topWords.length,
            itemBuilder: (context, index) {
              final wordInfo = topWords[index];
              return ListTile(
                title: Text(wordInfo.word),
                subtitle: Text('Submitted by ${wordInfo.count} users'),
              );
            },
          );
        },
      ),
    );
  }
}
